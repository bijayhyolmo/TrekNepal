
@model TrekNepal.Models.Offer
<div class="card">
    <form class="form-horizontal" action="@Url.Action("SaveOffer")" method="post" enctype="multipart/form-data">
        <div class="card-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <i class="fa fa-pencil"></i> Offers
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Type</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Offers</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(x=>x.Offers, new { @class = "form-control", rows = 7 })
                        @Html.ValidationMessageFor(model => model.Offers, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Description</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 7 })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-sm btn-success" type="submit">
                <i class="fa fa-dot-circle-o"></i> Submit
            </button>
        </div>
    </form>
</div>
