@model IEnumerable<TrekNepal.Models.Offer>

@{
    ViewBag.Title = "Offers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">Home</li>
    <li class="breadcrumb-item active">Offers</li>
</ol>
<div class="row">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <a id="addNew" href="#" data-href="@Url.Action("SaveOffer", new { id = 0})" class="btn-modify">
                        <i class="fa fa-plus-circle"></i> Add new
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> All Offers
                        </div>
                        <div class="card-body">
                            @if (Model != null)
                            {
                                    <div class="row">
                                        @foreach (var offer in Model)
                                        {
                                            <div class="col-sm-6 col-md-4">
                                                <div class="card">
                                                    <div class="card-header">
                                                        @offer.Type
                                                        <div class="card-header-actions">
                                                            <a class="card-header-action btn-setting btn-modify" data-href="@Url.Action("SaveOffer", new { @id = offer.Id })" href="#">
                                                                <i class="fa fa-pencil"></i>
                                                            </a>
                                                            <a class="card-header-action btn-close" href="#">
                                                                <i class="fa fa-close"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="card-body collapse show" id="collapseExample">
                                                        <p>Offer: @offer.Offers</p>
                                                        <p>Description: @offer.Description</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                            } else {
                                <div> No Offers yet</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="partial-form"></div>
</div>
<script>
    $(".btn-modify").on("click", function () {
                                var url = $(this).data("href");
        $(".container-fluid").addClass("col-lg-8");
                                if (url != null) {
            $("#partial-form").addClass("col-lg-4");
            $("#partial-form").load(url);
                                }
                            });
</script>
